<% content_for :navbar do %>
	<%= render 'navbar' %>
<%end%>

<% if current_user %>
	<div id="welcome">
		<br>
		<%= "Welcome!"%>
		<br><br>
		<%= "You have signed in as " + current_user.email %>
		<br><br>
		<div class="alert alert-success">
		<%= "Please note" %>
		  <ol>
		  	<li><%= "You MUST have at least one group before creating a task." %></li>
		  	<li><%= "Your first created group CANNOT be deleted." %></li>
		  </ol>
		</div>
		<br>
		<%= "If you haven't create your first group "%><br>
		<%= link_to 'Create', new_group_path, class:"btn btn-success"  %>
		<br><br>
		<%= link_to 'View Your Task Groups', groups_path, class:"btn btn-primary"  %>

	</div>
<% else %>
	<div id="welcome">
		<br>
		<%= "Please sign in to enjoy your journey with"%>
		<br><br>
		<div style="font-size: 30px;"><%= "Todo-Mangager!" %></div>
      		<br><br>
		<%= link_to'Sign up', new_registration_path(:user), class:"btn btn-success" %>
      		<%= link_to'Log in', new_session_path(:user), class:"btn btn-primary" %>
	</div>
<% end %>
