<% content_for :navbar do %>
	<%= render 'navbar' %>
<%end%>

<% if current_user.groups.first %>
	<h1 id="pageTitle">Groups</h1>

	<div style="font-family: 'Arial Black', Gadget, sans-serif">
	<% @groups.each do |group| %>
		<%= link_to group.name, group_tasks_path(group), class: "btn btn-default btn-block" %> 
		<br>
	<% end %>
	</div>

	<br><%= link_to 'Create a New Group', new_group_path, class: "btn btn-success btn-block"%>
	<br><%= link_to 'Create a New Task', new_group_task_path(current_user.groups.first), class: "btn btn-success btn-block"%>
	<br><%= link_to 'View All Tasks', overview_groups_path, class: "btn btn-primary btn-block" %>
<% else %>
	<div id="welcome">
		<br>
		<%= "Please create your first group immediately."%><br><br>
		<%= "Only then you can create your tasks."%><br><br>
		<%= link_to 'Create', new_group_path, class:"btn btn-success"  %>
	</div>
<% end %>