<h2 id="pageTitle"> Todo List </h2>


<table class="table table-striped table-hover">
<tr style="font-family: 'Arial Black', Gadget, sans-serif">
	<th>Text</th>
	<th>Group</th>
	<th>Action</th>
</tr>
<% @tasks.each do |t|%>
<tr style="text-align:center"> 
	<% group=Group.find(t.group_id) %>
	<td><%= t.text %></td>
	<td style="font-weight:bold" ><%= group.name%></td>
	<td>
		<div class="btn-group">
		<%= link_to 'Show', group_task_path(group, t), class:"btn btn-info" %>
		<%= link_to 'Edit', edit_group_task_path(group, t), class:"btn btn-warning" %>
		<%= link_to 'Delete', group_task_path(group, t), :method => :delete, :data => {:confirm => "Are you sure?"}, class:"btn btn-danger" %>
		</div>
	</td>
</tr>
<% end %>
</table>

<br><%= link_to 'Create', new_group_task_path(:group_id => 4), class:"btn btn-success btn-block" %>
<br><%= link_to 'Homepage', root_path, class:"btn btn-primary btn-block"  %>