<h2> Todo List </h2>

<table>
<tr>
	<th>Text</th>
	<th>Group</th>
	<th colspan = 3>Group</th>
</tr>
<% @tasks.each do |t|%>
<tr> 
	<td><%= t.text %></td>
	<td><%= Group.find(t.group_id).name %></td>
	<td><%= link_to 'Show', task_path(t) %></td>
	<td><%= link_to 'Edit', edit_task_path(t) %></td>
	<td><%= link_to 'Delete', task_path(t), :method => :delete,
	    :data => {:confirm => "Are you sure?"} %></td>
</tr>
<% end %>
</table>

<br>
<%= link_to 'Create', new_task_path %>
