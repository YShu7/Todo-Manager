<h2 id="pageTitle"> <%= @head %></h2>

<table class = "table table-striped table-hover">
<tr style="font-family: 'Arial Black', Gadget, sans-serif">
	<th>Text</th>
	<th>Deadline</th>
	<th>Action</th>
</tr>
<% @tasks.each do |t| %>
<tr style="text-align:center">
	<%= render :partial => 'highlight', :locals => {:t => t} %><br>
	<td><%= t.ddl %></td>
	<td>
		<div class="btn-group">
		<%= link_to 'Show', group_task_path(@group, t), class:"btn btn-info" %>
		<%= link_to 'Edit', edit_group_task_path(@group, t), class:"btn btn-warning" %>
		<%= link_to 'Delete', group_task_path(@group, t), :method => :delete, :data => {:confirm => "Are you sure?"}, class:"btn btn-danger" %>
		</div>
	</td>
</tr>
<% end %>
</table>

<br><%= link_to 'Create', new_group_task_path, class:"btn btn-success btn-block" %>
<br><%= link_to 'Rename Group', new_group_task_path, class:"btn btn-warning btn-block" %>
<br><%= link_to 'Delete Group', bulk_destroy_group_tasks_path(@group), class:"btn btn-danger btn-block" %>
<br><%= link_to 'Back', root_path, class:"btn btn-primary btn-block" %>
